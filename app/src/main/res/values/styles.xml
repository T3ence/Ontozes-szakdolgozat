        <item name="telepites_logo">@drawable/ic_no_water_white</item>item>
        <item name="ontozes_logo">@drawable/ic_water_drop_white</item>item>
        <item name="location">@drawable/ic_location_white</item>item>
        <item name="speed_gauge">@drawable/ic_speed_gauge_white</item>item>

        <item name="clutch">@drawable/ic_clutch_white</item>item>
        <item name="clock_icon">@drawable/ic_clock_white</item>item>
        <item name="timer_alap_icon">@drawable/ic_timer_white</item>item>
        <item name="timer_leallitas_icon">@drawable/ic_timer_orange</item>item>

        <item name="battery_icon">@drawable/ic_car_battery_white</item>item>
        <item name="camera_icon">@drawable/ic_security_camera_white</item>item>

    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MineCustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

