        <item name="click_indicator">@color/colorAccentLight_Night</item>

        <item name="fab_cardBackground">@color/colorPrimary_Night</item>

        <!-- Progress BAR -->

        <!-- Öntözés -->
        <item name="BarProgressStartColor_ontozes">@color/colorPrimary_Night</item>
