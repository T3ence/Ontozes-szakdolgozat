        <item name="gaspump_ic">@drawable/ic_gas_pump_white</item>
        <item name="theme_ic">@drawable/ic_settings_white</item>
        <item name="waveGauge_frame">@drawable/olaj_night</item>
        <item name="csepel_ic">@drawable/ic_csepel_white</item>
        <item name="bauerat">@drawable/bauerat_night</item>

        <item name="oil_pressure">@drawable/ic_olaj_white</item>item>
        <item name="water_pressure">@drawable/ic_water_pressure_white</item>item>
        <item name="water_flow">@drawable/ic_water_flow_white</item>item>
