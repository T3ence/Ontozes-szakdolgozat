<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/vezerles_frag"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/background_type2"
    tools:context=".Vezerles">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="25dp"
            android:orientation="vertical">


            <androidx.cardview.widget.CardView
                android:layout_width="370dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="25dp"
                android:alpha="0.9"
                app:cardBackgroundColor="?attr/cardBackground"
                app:cardCornerRadius="35dp">


                <!-- TODO: Update blank fragment layout -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingTop="10dp"
                    android:paddingBottom="20dp"
                    tools:context="${relativePackage}.${activityClass}">


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="10dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">


                        <com.github.anastr.speedviewlib.SpeedView
                            android:id="@+id/fordulatszam"
                            android:layout_width="335dp"
                            android:layout_height="340dp"
                            android:layout_marginTop="6dp"

                            app:layout_constraintBottom_toBottomOf="parent"

                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.496"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:sv_centerCircleColor="@color/transparent"

                            app:sv_endDegree="340"
                            app:sv_indicator="QuarterLineIndicator"
                            app:sv_indicatorColor="@color/colorAccent"
                            app:sv_indicatorLightColor="?attr/fontColor_Strong"
                            app:sv_indicatorWidth="10dp"
                            app:sv_markColor="@android:color/white"
                            app:sv_maxSpeed="1600"
                            app:sv_minSpeed="0"

                            app:sv_sectionStyle="SQUARE"
                            app:sv_speedTextColor="?attr/fontColor_Strong"
                            app:sv_speedTextFormat="INTEGER"
                            app:sv_speedTextPadding="15dp"
                            app:sv_speedTextSize="35sp"

                            app:sv_speedometerMode="TOP"
                            app:sv_speedometerWidth="40dp"

                            app:sv_startDegree="200"
                            app:sv_textColor="?attr/fontColor_Strong"

                            app:sv_textSize="16dp"
                            app:sv_trembleDegree="0.1"

                            app:sv_unit=" fordulat/perc"
                            app:sv_unitTextColor="@color/colorAccent"

                            app:sv_unitTextSize="15dp"
                            app:sv_unitUnderSpeedText="true"
                            app:sv_withIndicatorLight="true"
                            app:sv_withTremble="false" />

                        <TextView
                            android:id="@+id/fordulatszam_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/roboto_bold"
                            android:text="Fordulatszám"
                            android:textColor="?attr/fontColor_Strong"
                            android:textSize="23sp"
                            android:visibility="visible"

                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="?attr/csepel_ic"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.cardview.widget.CardView
                        android:layout_width="330dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="20dp"
                        android:alpha="1"
                        app:cardBackgroundColor="?attr/colorAccentLight"
                        app:cardCornerRadius="35dp"

                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="vertical"
                            android:padding="10dp"


                            >

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="300dp"
                                android:layout_height="80dp"
                                android:paddingLeft="13dp"
                                android:paddingRight="13dp"
                                android:paddingBottom="10dp">

                                <ImageView
                                    android:id="@+id/imageView"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:background="?attr/clutch"

                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <TextView
                                    android:id="@+id/kuplung_pozicio_data"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:fontFamily="@font/roboto_bold"
                                    android:text=""
                                    android:textAlignment="center"
                                    android:textAllCaps="false"
                                    android:textColor="?attr/fontColor_Light_card"
                                    android:textSize="20sp"
                                    android:textStyle="bold"


                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toEndOf="@+id/imageView"
                                    app:layout_constraintTop_toTopOf="parent" />


                            </androidx.constraintlayout.widget.ConstraintLayout>


                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="300dp"
                                android:layout_height="50dp"
                                android:paddingLeft="13dp"
                                android:paddingRight="13dp"
                                android:paddingBottom="10dp">

                                <ImageView
                                    android:id="@+id/imageView4"
                                    android:layout_width="35dp"
                                    android:layout_height="30dp"
                                    android:background="?attr/speed_gauge"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <TextView
                                    android:id="@+id/kivant_pozicio_const"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight=".35"
                                    android:text="Gázpedál pozíció:"
                                    android:textAlignment="center"
                                    android:textColor="?attr/fontColor_Light_card"
                                    android:textSize="21sp"
                                    android:textStyle="bold"

                                    app:layout_constraintBottom_toBottomOf="parent"


                                    app:layout_constraintEnd_toStartOf="@+id/kivant_pozicio_data"
                                    app:layout_constraintStart_toEndOf="@+id/imageView4"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <TextView
                                    android:id="@+id/kivant_pozicio_data"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight=".45"
                                    android:fontFamily="@font/roboto_bold"
                                    android:text="0%"
                                    android:textAlignment="center"
                                    android:textAllCaps="false"
                                    android:textColor="?attr/fontColor_Dark_card"
                                    android:textSize="23sp"
                                    android:textStyle="bold"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                            </androidx.constraintlayout.widget.ConstraintLayout>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:orientation="horizontal">


                        <Space
                            android:id="@+id/space3bal"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".1"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/fordulatszam1_volume" />

                        <Button
                            android:id="@+id/minusFordulat"
                            style="@style/Widget.AppCompat.Button.Colored"
                            android:layout_width="120dp"
                            android:layout_height="70dp"
                            android:layout_gravity="center"
                            android:background="@drawable/button_bck_orange"
                            android:fontFamily="@font/roboto_bold"
                            android:onClick="minusFord"
                            android:orientation="horizontal"
                            android:text="-"
                            android:textAlignment="center"
                            android:textAppearance="@style/TextAppearance.AppCompat.Large"
                            android:textColor="#FFFFFF"
                            android:textSize="35sp"
                            tools:ignore="OnClick" />

                        <Space
                            android:id="@+id/space3center"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".08"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/fordulatszam1_volume" />

                        <Button
                            android:id="@+id/plusFordulat"
                            style="@style/Widget.AppCompat.Button.Colored"
                            android:layout_width="120dp"
                            android:layout_height="70dp"
                            android:layout_gravity="center"
                            android:background="@drawable/button_bck_orange"
                            android:fontFamily="@font/roboto_bold"
                            android:onClick="plusFord"
                            android:orientation="horizontal"
                            android:text="+"
                            android:textAlignment="center"
                            android:textAppearance="@style/TextAppearance.AppCompat.Large"
                            android:textColor="#FFFFFF"
                            android:textSize="35sp"
                            tools:ignore="OnClick" />

                        <Space
                            android:id="@+id/space3jobb"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".10"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/fordulatszam1_volume" />
                    </LinearLayout>

                </LinearLayout>


            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>


</FrameLayout>